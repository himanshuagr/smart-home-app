<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall2"
    tools:context=".registerActivity">

    <EditText
        android:id="@+id/mobile"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundeditext"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="phone"
        android:paddingLeft="10sp"
        android:layout_alignLeft="@+id/password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/mobile"
        android:layout_alignStart="@+id/register"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundeditext"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10sp"
        android:layout_alignLeft="@+id/register" />

    <EditText
        android:id="@+id/name"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/mobile"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundeditext"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="10sp"
        android:layout_alignLeft="@+id/mobile" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundeditext"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingLeft="10sp"
        android:layout_alignLeft="@+id/password" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/icon" />

    <Button
        android:id="@+id/register"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/confirm_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/mybutton"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="register"
        android:text="Register"
        android:textColor="@android:color/background_light" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</RelativeLayout>